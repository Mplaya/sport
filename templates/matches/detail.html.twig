{% extends 'base.html.twig' %}

{% block title %}Match Details!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;padding: 20px }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if data|length > 0 %}
        <table class="styled-table">
            <thead>
            <tr>
                <th>{{ data.homeData.name }} : {{ data.matchData.homeTeamScore }}</th>
                <th>{{ data.awayData.name }} : {{ data.matchData.awayTeamScore }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td></td>
                <td></td>
            </tr>
            {% for key,value in data.eventData %}
            <tr>

                {% if value.eventId == 1 %}
                    <td>Player:{{ value.player }} ⚽️  Time: "{{value.createdAt|date('YmdHi') - data.matchData.matchDate|date('YmdHi') }} </td>
                    <td></td>
                {% elseif value.eventId == 50 %}
                    <td></td>
                    <td>Player:{{ value.player }} ⚽️  Time: "{{value.createdAt|date('YmdHi') - data.matchData.matchDate|date('YmdHi') }} </td>
                {% endif %}

            </tr>
            {% endfor %}

            <tr><td style="padding-bottom: 1em;" colspan="3"></td></tr>

            </tbody>
        </table>
        <span id="checker" style="display: none"></span>
    {% else %}
        <h1>⛔️ There is no active matches ! </h1>
        <span id="checker" style="display: none">false</span>
    {% endif %}

</div>


{% endblock %}